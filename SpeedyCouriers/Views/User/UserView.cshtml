<div class="container">

    <div class="main">

        <div class="col-md-12 mt-1">

            <div class="card mb-3 content">
                <img src="/images/user.png" class="rounded-circle" width="150" height:"50">

                <h2 class="m-3 pt3 text-center">Profile</h2>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">

                            <h3 class="m-3 pt3"><label for="name">Full Name</label></h3>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="txtPassportNumber1" value=" @Session["Name"].ToString()" disabled="disabled" />
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h3 class="m-3 pt3"><label for="name">Role</label></h3>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="txtPassportNumber3" value=" @Session["UserRole"].ToString()" disabled="disabled" />
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h3 class="m-3 pt3"><label for="name">Email</label></h3>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="txtPassportNumber2" value=" @Session["Email"].ToString()" disabled="disabled" />
                        </div>
                    </div>
                    <hr>
