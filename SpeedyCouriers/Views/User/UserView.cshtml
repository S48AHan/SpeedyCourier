
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}


<h2> Index</h2>


<head>
    <style>
        body {
            margin-top: 20px;
            background-color: lightblue;
        }

        .main {
            padding: 2px;
        }

        .topbar {
            background-color: teal;
            overflow: hidden;
        }

            .topbar a {
                float: right;
                color: black;
                background-color: white;
            }


        .btnEdit {
            background: DodgerBlue;
            margin-bottom: 10px;
            height: 50px;
            font-size: 30px;
            margin-left: 200px;
            color: white;
        }

            .btnEdit:hover {
                background-color: #368BC1;
            }

        #txtPassportNumber1, #txtPassportNumber2, #txtPassportNumber3 {
            font-size: 30px;
            margin-bottom: 10px;
            width: 100%;
        }

        .rounded-circle {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 10%;
            margin-top: 5px;
        }

        .btn {
            margin-left: auto;
            margin-right: auto;
            display: block;
            margin-bottom: 10px;
        }

        .logout {
            height: 50px;
            background-color: azure;
            text-align: center;
            font-size: 25px;
            float: right;
            border-radius: 5px;
        }
    </style>
