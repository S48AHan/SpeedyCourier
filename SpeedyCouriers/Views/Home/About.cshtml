@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>
    <style>
        * {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            font-size: 20px;
            box-sizing: border-box;
            padding: 0;
        }

        .about {
            width: 100%;
            padding: 78px 0px;
        }

        .about-text {
            width: 550px;
            margin-left: 20px;
        }

            .about-text h1 {
                font-size: 80px;
                text-transform: capitalize;
                margin-bottom: 20px;
            }

        .main {
            width: 1130px;
            max-width: 95%;
            margin: 0 auto;
            display: flex;
            align-items: center;
        }

        p {
            font-size: 25px;
        }
    </style>
</head>
<body>
    <section class="about">
        <div class="main">
            <img src="~/Images/about.png" />
            <div class="about-text">
                <h1>About Us Page</h1>
                <p>
                    Speedy Courier is a e-commerce door to door delivery service provider.
                </p>
                <p>
                    Speedy courier aims to build a better eco system by transforming from the traditional to technology driven door to door delivery services.
                </p>
            </div>
        </div>
    </section>
</body>


