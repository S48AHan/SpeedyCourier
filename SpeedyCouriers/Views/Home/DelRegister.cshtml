
@{
    ViewBag.Title = "DelRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DelRegister</h2>

<form action="/Home/DelRegister" method="post">

    <div class="form-group mt-4">
        <label for="">Name</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="delmanName" required>
        @Html.ValidationMessage("delmanName", "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-4">
        <label for="">Password</label>
        <input type="password" class="form-control" id="txtPassword" placeholder="Enter Password" name="delmanPass" required>
        @Html.ValidationMessage("delmanPass", "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-4">
        <label for="">Email</label>
        <input type="email" class="form-control" id="txtEmail" placeholder="Enter Email" name="delmanEmail" required>
        @Html.ValidationMessage("delmanEmail", "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-4">
        <label for="">Phone</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="delmanPhone" required>
        @Html.ValidationMessage("delmanPhone", "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-4">
        <label for="">Address</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="delmanAddress" required>
        @Html.ValidationMessage("delmanAddress", "", new { @class = "text-danger" })
    </div>


    <div class="mt-4">
        <label for="">Status</label>
        <select id="category" name="delmanStatus">
            <option style="display:none"></option>
            <option value="Available">Available</option>
            <option value="Busy">Busy</option>
        </select>


        @Html.ValidationMessage("delmanStatus", "", new { @class = "text-danger" })
    </div>

    <!--
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    -->
    <button class="btn btn-success mt-4">Submit</button>
</form>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}